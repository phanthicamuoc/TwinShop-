{% extends 'base.html.twig' %}

{% block title %}Customer detail{% endblock %}

{% block body %}

    <div class="card">
        <div class="card-header">
            <h1>Customer detail</h1>
        </div>
        <div class="card-body">
            <p class="card-text"><span class="fs-6 fw-bold">Customer ID: </span>{{ customer.id }}</p>
            <p class="card-text"><span class="fs-6 fw-bold">Customer name: </span>{{ customer.name }}</p>
            <p class="card-text"><span class="fs-6 fw-bold">Phone: </span>{{ customer.phoneNumber }}</p>
        </div>
    </div>


{% endblock %}